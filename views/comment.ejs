<div id="comments">
    <%if(locals.user){%>
            <form action="/comment/create" method="POST" id="commentForm">
                <input type="text" name="content" id="comment" class="form-control">
                <input type="hidden" name="post" value="<%=post._id%>">
                <button type="submit">Comment</button>
            </form>
    <%}%>
    <div>
        <ul id="commentdis">
            <%for(comment of post.comments){%>
                <li id="eachCommentdis">
                    <h6><%=comment.content%></h6>
                    <p><%=comment.user.name%></p>
                <%if(locals.user){%>
                    <a href="/comment/delete/?id=<%=comment._id%>"><img id="commentDel" src="https://cdn-icons.flaticon.com/png/512/484/premium/484662.png?token=exp=1645220086~hmac=f60fd19979ee06f494c5c7f35f3eb2f2"></a>
                <%}%>
                </li>
            <%}%>
        </ul>
    </div>
</div>

<script src="/js/home_comments.js"></script>