<div id="comment">
    <%if(locals.user){%>
            <form action="/comment/create" method="POST">
                <input type="text" name="content" id="comment" class="form-control">
                <input type="hidden" name="post" value="<%=post._id%>">
                <button type="submit">Comment</button>
            </form>
    <%}%>
    <div>
        <ul>
            <%for(comment of post.comments){%>
                <li><p><%=comment.content%></p><%=comment.user.name%></li>
                <%if(locals.user){%>
                    <a href="/comment/delete/?id=<%=comment._id%>"><button type="submit" class="btn btn-sm btn-warning">Delete</button></a>
                <%}%>
            <%}%>
        </ul>
    </div>
</div>